{
    "manifest_version": 3,
    "name": "Shopee Cookie Scraper",
    "version": "1.0.0",
    "description": "Extract Shopee cookies for affiliate dashboard integration",
    "permissions": [
        "cookies",
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "https://*.shopee.co.id/*",
        "https://*.shopee.com.my/*",
        "https://*.shopee.sg/*",
        "http://localhost:8000/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}